{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "retrieves a specific article by article id",
    "queries": [],
    "exampleResponse": {
      "article_id": 1,
      "title": "Seafood substitutions are increasing",
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text from the article..",
      "created_at": 1527695953341,
      "votes": 0,
      "comment_count": 3
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates vote count by specified increment",
    "queries": [],
    "example request body": { "inc_votes": 5 },
    "exampleResponse": {
      "article_id": 1,
      "title": "Seafood substitutions are increasing",
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text from the article..",
      "created_at": 1527695953341,
      "votes": 5,
      "comment_count": 3
    }
  },
  "GET /api/users": {
    "description": "returns an array of all users",
    "queries": [],
    "exampleResponse": [
      { "username": "butter_bridge" },
      { "username": "icellusedkars" },
      { "username": "rogersop" },
      { "username": "lurker" }
    ]
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments",
    "queries": [],
    "exampleResponse": [
      {
        "comment_id": 1,
        "author": "weegembump",
        "body": "A comment about an article.",
        "created_at": 1527695953341,
        "votes": 0
      }
    ]
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment associated with the relevant article id",
    "queries": [],
    "exampleRequestBody": {
      "username": "rogersop",
      "body": "This is the greatest thing I've ever read"
    },
    "exampleResponse": [
      {
        "comment_id": 2,
        "author": "rogersop",
        "body": "This is the greatest thing I've ever read",
        "created_at": 1527695953341,
        "votes": 0
      }
    ]
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes comment by comment id"
  }
}
